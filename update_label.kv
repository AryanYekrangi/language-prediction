<MyLayout>
	BoxLayout:
		orientation: "horizontal"
		size: root.width, root.height
		
		BoxLayout:
			orientation: "vertical"
			size_hint: (0.8, 1)
			
			Label:
				font_size: 16
				text: "Enter text below. Only the languages on the right are currently supported by this tool."
				size_hint: (1, 0.2)
				
			TextInput:
				id: name_input
				multiline: True
				size_hint: (1, 2)
				background_color: (1,1,1,1)
				
			Button:
				font_size: 24
				text: "Predict Language"
				size_hint: (1, .4)
				on_press: root.press()
	
		
		BoxLayout:
			orientation: "vertical"
			size_hint: (0.2, 1)
			
			Label:
				font_size: 12
				text: "Supported Languages: 11"
			
			Label:
				id: english_label
				text: "English"
				background_color: (0, 0, 0, 0)
				canvas.before:
					Color:
						rgba: self.background_color
					Rectangle:
						size: self.size
						pos: self.pos
			
